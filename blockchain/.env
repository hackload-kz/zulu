# Hyperledger Fabric Network Configuration
# Customize these values for your hackathon needs

# Network Configuration
COMPOSE_PROJECT_NAME=fabric_hackathon
NETWORK_NAME=fabric_network

# Channel Configuration
CHANNEL_NAME=mychannel
CHANNEL_PROFILE=ThreeOrgsOrdererGenesis

# Chaincode Configuration
CHAINCODE_NAME=mycc
CHAINCODE_VERSION=1.0
CHAINCODE_SEQUENCE=1

# Organization Configuration
ORG_NAME=Org1
ORG_MSP_ID=Org1MSP
ORG_DOMAIN=org1.example.com

# Orderer Configuration
ORDERER_DOMAIN=example.com
ORDERER_TYPE=etcdraft

# Performance Tuning (adjust based on your hardware)
ORDERER_MEMORY_LIMIT=512M
PEER_MEMORY_LIMIT=1G

# Logging Levels (DEBUG, INFO, WARNING, ERROR)
FABRIC_LOGGING_SPEC=INFO
ORDERER_LOGGING_SPEC=INFO
PEER_LOGGING_SPEC=INFO

# TLS Configuration
TLS_ENABLED=true

# Database Configuration
DATABASE_TYPE=leveldb  # or couchdb for rich queries

# Metrics and Monitoring
METRICS_ENABLED=true
OPERATIONS_ENABLED=true