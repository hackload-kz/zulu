{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@contracts/*": ["./contracts/*"],
    }
  },
  "include": ["**/*.js", "**/*.mjs", "contracts/**/*.js"],
  "exclude": ["node_modules"],
  "typeAcquisition": {
    "enable": true,
    "include": ["node", "fabric-contract-api", "fabric-chaincode-node"]
  }
}
